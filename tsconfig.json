{
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "es2015", "dom"],
    "importHelpers": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/styleguide",
    "**/build",
    "**/cra-template-react-ui",
    "**/test-app"
  ]
}
